<div class="container mt-3">
    <div class="jumbotron">
        <h1 style="color:rgb(45, 45, 56);">Ingrese los datos del producto</h1>
        <br>

        <form action="/ingreso" method="post">
            
            <div class="form-group">
                <label for="name"><b>Nombre:</b></label>
                <input id="name" class="form-control" type="text" name="name" required>
            </div>

            <div class="form-group">
                <label for="price"><b>Precio:</b></label>
                <input id="price" class="form-control" type="number" min="1" step="0.01" name="price" required>
            </div>            

            <div class="form-group">
                <label for="description"><b>Descripcion:</b></label>
                <input id="description" class="form-control" type="text" name="description" required>
            </div>

            <div class="form-group">
                <label for="photo"><b>Foto:</b></label>
                <input id="photo" class="form-control" type="url" name="photo" required>
            </div>

            <button class="btn btn-success mt-3 mb-5">Enviar</button>
        </form>
    </div>
</div>


